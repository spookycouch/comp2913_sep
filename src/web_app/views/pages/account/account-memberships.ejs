<%- include('../../partials/head') %>
<%- include('../../partials/header') %>


<div class="container">
    <div class="account account--background">
        <%- include('../../partials/account-side-bar') %>

        <div class="account__section account__memberships" style="color:black;">

            <h1>Your memberships</h1>
            
            <!-- Content Tabs -->
            <div class="account__section account__overview short-margin full-width">
            
                <% if(locals.memberships){ %>
                    <% for (var i = 0; i < memberships.length;  i++ ) { %>

                        <div href="#" class="overview__option hvr-float">
                            
                            <% if(!memberships[i].expired) { %>
                                <div class="option__content option__content--center" style="background-color: #d6c631;text-align:left;padding:20px;max-height:400;">
                            <% } else { %>
                                <div class="option__content option__content--center" style="background-color: red;text-align:left;padding:20px;max-height:400;">
                            <% } %>

                                <div class="content__title">
                                    <h2>Membership #<%- memberships[i].id %></h2>
                                    <% if(memberships[i].expired) { %><h3>EXPIRED</h3><% } %>
                                </div>
        
                                <div class="content__dsc">
                                    
                                    <b>Start date:</b> <%- memberships[i].start_date %>
                                    <br>

                                    <b>Validity: </b> <%- memberships[i].validity %> days
                                    <br>
                                    
                                    <b>Sport: </b> <%- memberships[i].name %>
                                    <br>
                                    
                                    <p style="overflow-wrap: break-word;width:70%;">
                                        <b>Description: </b> <%- memberships[i].description %>
                                    </p>
                                </div>
        
                                <div style="text-align:right;width:100%;">
                                    <div class="content__explore hvr-sweep-to-right">
                                        <a href="/delete/memberships/<%- memberships[i].id %>">
                                            <h3>Cancel</h3>
                                        </a>
                                    </div>
                                </div>

                            </div>
                        </div>

                    <% } %>

                <% }else{ %>
                    
                    <div style="height:100%;">
                        <h2 style="color:black;margin:auto;">No memberships found :(</h2>
                    </div>
                <% }%>

            </div>
        </div>
    </div>
</div>


<%- include('../../partials/footer') %>
<%- include('../../partials/foot') %>